@using MambaTemplate.Models;
@model List<Worker>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Striped Table</h4>
                        <p class="card-description">
                            Worker Table
                        </p>
                        <a href="/MambaAdmin/Worker/Create" class="btn btn-success">Create Worker</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Surname
                                        </th>
                                        <th>
                                            Profession
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                   @foreach (var workers in Model)
                                        {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/admin/images/faces/@workers.Image" alt="image" />
                                            </td>
                                            <td>
                                                @workers.Id
                                            </td>
                                            <td>
                                                @workers.Name
                                            </td>
                                            <td>
                                                @workers.Surname
                                            </td>
                                            <td>
                                                @workers.Profession.Name
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" href="/MambaAdmin/Worker/Update/@workers.Id"><i class="mdi mdi-airballoon"></i></a>
                                                <a class="btn btn-danger" href="/MambaAdmin/Worker/Delete/@workers.Id"><i class="mdi mdi-delete-variant"></i></a>
                                            </td>
                                        </tr>
                                        }      
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>