@using MambaTemplate.Areas.MambaAdmin.ViewModels.Worker;
@model CreateWorkerVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>  
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" class="form-control" id="exampleInputName1" placeholder="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Image">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
             
                <div class="form-group" >
                    <label asp-for="ProfessionId">Profession</label>
                    <input asp-for="ProfessionId" class="form-control" id="exampleInputName1" placeholder="ProfessionId">
                    <span asp-validation-for="ProfessionId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>